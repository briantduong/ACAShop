{% extends 'ACAShopBundle::layout.html.twig' %}

{%  block title %} ACA Shop - Billing Info {% endblock %}

{% block content %}

    <h3>Billing Information</h3><br/>

    <form action="/billing_info" id="shipping-form" method="post">

        <h4>Contact</h4>
        <br/>
        <input type="text" name="firstName" size="5" class="form-control" placeholder="First Name" />
        <input type="text" name="lastName" size="5" class="form-control" placeholder="Last Name" />
        <input type="text" name="phone" size="10" class="form-control" placeholder="(xxx) xxx-xxxx" />
        <br/>

        <h4>Shipping Address</h4>
        <br/>
        <input type="text" name="shipAddress" size="5" class="form-control" placeholder="Address" />
        <input type="text" name="shipCity" size="5" class="form-control" placeholder="City" />
        <input type="text" name="shipState" size="5" class="form-control" placeholder="State" />

        <h4>Billing Address</h4>
        <input type="checkbox" name="sameAddress" checked="yes" /> Same as Shipping Address
        <br/>
        <input type="text" name="billAddress" size="5" class="form-control" placeholder="Address" />
        <input type="text" name="billCity" size="5" class="form-control" placeholder="City" />
        <input type="text" name="billState" size="5" class="form-control" placeholder="State" />

        <h4>Payment Information</h4>
        <input type="text" name="paymentInfo" size="5" class="form-control" placeholder="Payment Info" />

        <br/>

        <div class="pull-right">
            <button class="btn btn-primary" id="btn-cart">Back to Cart</button>
            <button class="btn btn-success" id="btn-process-action">Checkout</button>

        </div>

    </form>

    <br/><br/>


    <br/><br/><br/>

{% endblock %}